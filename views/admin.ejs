<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div id="admin-page">
      <h1>Admin - user list</h1>

      <%users.forEach((user)=>{%>
      <div class="user">
        <p>Username: <%=user.username%></p>
        <p>Email: <%=user.email%></p>
        <%if(user.likedProducts.length){%>
        <p>Liked Products:</p>
        <%}%>
        <!--  -->
        <%user.likedProducts.forEach((product)=>{%>
        <!--  -->
        <li>
          <!--  -->
          <a href="/products/details<%=product._id%>">
            <!--  -->
            <%=product.name%>
            <!--  -->
          </a>
          <!--  -->
        </li>
        <%})%>
        <!--  -->
      </div>
      <%})%>
    </div>
  </body>
</html>
